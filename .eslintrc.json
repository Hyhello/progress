{
	"root": true,
	"parser": "babel-eslint",
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"extends": ["airbnb-base", "plugin:prettier/recommended"],
	"plugins": ["flowtype"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"rules": {
		"prettier/prettier": "error",
		"indent": 0,
		"linebreak-style": 0,
		"no-console": 0,
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"generator-star-spacing": "off",
		"eol-last": 0,
		"no-tabs": 0,
		"one-var": 0,
		"no-mixed-spaces-and-tabs": 0,
		"no-useless-return": 0,
		"no-multi-spaces": ["error", { "ignoreEOLComments": true }]
	},
	"settings": {
		"flowtype": {
			"onlyFilesWithFlowAnnotation": true
		}
	}
}
