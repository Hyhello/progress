{
	"root": true,
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"extends": ["airbnb-base", "prettier"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"rules": {
		"prettier/prettier": "error",
		"indent": ["error", 4],
		"linebreak-style": 0,
		"no-console": 0,
		"quotes": ["error", "single"],
		"semi": ["error", "always"]
	}
}
